#!/bin/bash

# .bash_exports

export EDITOR=vim
export SVN_EDITOR=vim
export SWT_GTK3=0
export LC_ALL=en_US.UTF-8

# unlimited history
export HISTSIZE=
export HISTFILESIZE=
export HISTTIMEFORMAT="[%F %T] "
export HISTFILE=~/.bash_history_full
PROMPT_COMMAND="history -a; $PROMPT_COMMAND"

if [ -f ~/.bash_exports.local ]; then
    . ~/.bash_exports.local
fi
