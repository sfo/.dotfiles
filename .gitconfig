[core]
    autocrlf = input

[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    ft = fetch
    d = diff
    dc = diff --cached
    dt = difftool
    tr = log --graph --oneline --all --color --decorate --date=short
    sr = svn rebase
    sc = svn dcommit
    rb = rebase
    pt = push --follow-tags
[push]
    default = simple

[diff]
    tool = kdiff3
[include]
    path = .gitconfig.local
[gpg]
    program = gpg2
